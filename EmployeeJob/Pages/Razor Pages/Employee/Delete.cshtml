@page
@model EmployeeJob.Pages.Razor_Pages.Employee.DeleteModel
@{
}
<form method="post">
    <input type="hidden" asp-for="employee.Eid" />
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Personal Image</th>
                <th>Name</th>
                <th>Employment Date</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                    <td> <img src="@Url.Content(@Model.employee.PersonalPhoto)" style="width: 300px;height: 300px;border-radius: 30%;object-fit: cover;" class="preview-image" alt="heloo" /></td>
                    <td>@Model.employee.Name</td>
                    <td>@Model.employee.EmploymentDate.ToShortDateString()</td>
            </tr>
        </tbody>
    </table>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./index" class="btn btn-dark">Cancel</a>
</form>


